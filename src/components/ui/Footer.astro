---
const siteName = "PrivacyFix";
const currentYear = new Date().getFullYear();

const tools = [
  { href: '/tools/privacy-audit', label: 'Privacy Audit' },
  { href: '/tools/optout-tracker', label: 'Opt-Out Tracker' },
  { href: '/tools/state-rights', label: 'State Rights Lookup' },
];

const guides = [
  { href: '/guides/data-brokers', label: 'Data Broker Opt-Outs' },
  { href: '/guides/california-drop', label: 'California DROP Portal' },
  { href: '/guides/paid-vs-diy', label: 'Paid vs DIY' },
];

const legal = [
  { href: '/about', label: 'About' },
  { href: '/privacy', label: 'Privacy Policy' },
  { href: '/terms', label: 'Terms of Use' },
];
---

<footer class="border-t border-[var(--color-border)] bg-[var(--color-card)] mt-auto">
  <div class="container py-16 md:py-20">
    <!-- Main footer grid -->
    <div class="grid grid-cols-2 md:grid-cols-12 gap-8">
      <!-- Brand - takes more space on desktop -->
      <div class="col-span-2 md:col-span-5 lg:col-span-4">
        <div class="flex items-center gap-2 font-semibold text-lg mb-3">
          <svg class="w-5 h-5 text-violet-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
          {siteName}
        </div>
        <p class="text-sm text-[var(--color-muted)] max-w-xs leading-relaxed">
          Free tools and guides to take back your online privacy. No subscription required.
        </p>
      </div>

      <!-- Spacer on desktop -->
      <div class="hidden md:block md:col-span-2 lg:col-span-2"></div>

      <!-- Tools -->
      <div class="col-span-1 md:col-span-2 lg:col-span-2">
        <h3 class="text-xs font-semibold text-[var(--color-foreground)] uppercase tracking-wider mb-4">Tools</h3>
        <ul class="space-y-2.5">
          {tools.map(item => (
            <li>
              <a href={item.href} class="text-sm text-[var(--color-muted)] hover:text-[var(--color-foreground)] transition-colors">
                {item.label}
              </a>
            </li>
          ))}
          <li>
            <a href="/tools" class="text-sm text-violet-500 hover:underline">
              View all →
            </a>
          </li>
        </ul>
      </div>

      <!-- Guides -->
      <div class="col-span-1 md:col-span-2 lg:col-span-2">
        <h3 class="text-xs font-semibold text-[var(--color-foreground)] uppercase tracking-wider mb-4">Guides</h3>
        <ul class="space-y-2.5">
          {guides.map(item => (
            <li>
              <a href={item.href} class="text-sm text-[var(--color-muted)] hover:text-[var(--color-foreground)] transition-colors">
                {item.label}
              </a>
            </li>
          ))}
          <li>
            <a href="/guides" class="text-sm text-violet-500 hover:underline">
              View all →
            </a>
          </li>
        </ul>
      </div>

      <!-- Legal -->
      <div class="col-span-1 md:col-span-1 lg:col-span-2">
        <h3 class="text-xs font-semibold text-[var(--color-foreground)] uppercase tracking-wider mb-4">Legal</h3>
        <ul class="space-y-2.5">
          {legal.map(item => (
            <li>
              <a href={item.href} class="text-sm text-[var(--color-muted)] hover:text-[var(--color-foreground)] transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="border-t border-[var(--color-border)] mt-12 pt-8 flex flex-col sm:flex-row justify-between items-center gap-3">
      <p class="text-sm text-[var(--color-muted)]">
        © {currentYear} {siteName}. All rights reserved.
      </p>
      <p class="text-xs text-[var(--color-muted)]">
        We don't collect or sell your data. That's kind of the point.
      </p>
    </div>
  </div>
</footer>
